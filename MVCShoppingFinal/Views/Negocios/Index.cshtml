@model IEnumerable<MVCShopping.Models.Negocio>

@{
    ViewData["Title"] = "Negocios disponibles";
}

<h1>Listado de negocios disponibles</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idNegocio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idNegocio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idNegocio">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idNegocio">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idNegocio">Delete</a> |
                <a asp-action="agregarProducto" asp-route-id="@item.idNegocio">Agregar producto</a> 
            </td>
        </tr>
}
    </tbody>
</table>
