@using (Html.BeginForm("FiltradoXColor", "Home", FormMethod.Get)) {
    <div class="row-fluid span12">
        <div class="span3">
            <p><strong>Colores :</strong></p>
        </div>
        <div class="span5">
            @Html.DropDownList("ColorProducto", (ViewBag.colors as SelectList))
        </div>
    </div>
    <div class="row-fluid span12">
        <button class="btn btn-inverse" type="submit" title="Buscar por Color"><span class="fa fa-search"> Buscar</span></button>
    </div>
}