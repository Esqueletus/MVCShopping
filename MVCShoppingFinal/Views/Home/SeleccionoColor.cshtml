@model MVCShopping.Models.Producto

@{ ViewData["Title"] = "Filtrar x COLOR"; }

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SeleccionoColor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ColorProd" class="control-label"></label>
                <select asp-for="ColorProd" class="form-control" asp-items="Html.GetEnumSelectList<MVCShopping.Models.ColorProducto>()">
                    <option selected="selected" value="">Please select</option>
                </select>

                <span asp-validation-for="ColorProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SeleccionoColor" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
